{
  "name": "react-scanner-ui",
  "type": "module",
  "version": "0.0.11",
  "main": "dist/index.js",
  "bin": {
    "react-scanner-ui": "dist/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vimalmunjani/react-scanner-ui.git"
  },
  "author": "Vimal Munjani <vimal.j.munjani@gmail.com>",
  "license": "MIT",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "scripts": {
    "build": "tsc",
    "build:ui": "vite build --config ui/vite.config.ts",
    "build:docs": "vitepress build docs",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "dev:ui": "vite --config ui/vite.config.ts",
    "dev:docs": "vitepress dev docs",
    "preview:docs": "vitepress preview docs",
    "prepublishOnly": "yarn build",
    "publish:npm": "yarn build && npm publish",
    "prepare": "husky",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "lint:check": "eslint . --ext .ts,.tsx,.js,.jsx",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "dependencies": {
    "@vitejs/plugin-react": "^4.3.4",
    "commander": "^14.0.2",
    "detect-port": "^1.6.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "vite": "^5.4.19"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "@types/polka": "^0.5.7",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@typescript-eslint/eslint-plugin": "^8.52.0",
    "@typescript-eslint/parser": "^8.52.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.26",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "vitepress": "^1.6.4"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css,scss,yaml,yml}": [
      "prettier --write"
    ]
  }
}
